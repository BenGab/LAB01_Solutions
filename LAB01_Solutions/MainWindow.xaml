<Window x:Class="LAB01_Solutions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB01_Solutions"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel x:Name="mainPanel">
        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
            <Label Content="Income:" Width="100" />
            <TextBox Width="200" Margin="5,0,0,0" x:Name="tbIncome"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
            <Label Content="Tax:" Width="100" />
            <TextBox Width="200" Margin="5,0,0,0" x:Name="tbTax" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
            <Label Content="Paid:" Width="100" />
            <TextBox Width="200" Margin="5,0,0,0" x:Name="tbPaid"/>
        </StackPanel>
        <Button Content="Calculate" Margin="0,5,0,5" Width="100" HorizontalAlignment="Left" />
    </StackPanel>
</Window>
